{
  "name": "pintora",
  "description": "Monorepo for pintora project",
  "private": true,
  "scripts": {
    "clean": "rimraf \"packages/**/lib\"",
    "compile": "npx turbo run compile --concurrency=10",
    "compile:browser": "npx turbo run compile --concurrency=10 --ignore='packages/pintora-cli/**/*'",
    "watch": "npx turbo run watch --parallel --no-cache",
    "watch:browser": "npx lerna run watch --parallel --ignore='packages/pintora-cli/**/*'",
    "prepare": "lerna run prepare",
    "demo:dev": "cd demo && npm run dev",
    "website:dev": "cd website && npm run start",
    "coverage": "lerna run coverage --parallel",
    "prettier": "prettier \"packages/**/*.{ts,js}\"",
    "format": "npm run prettier -- --write",
    "format:check": "npm run prettier -- --check",
    "lint": "eslint packages/*/src/**/*.{ts,js}",
    "test": "npx jest",
    "build-site": "sh ./scripts/build-site.sh",
    "vercel-build": "npm run compile:browser && npm run build-site"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "turbo": "^1.0.19",
    "typescript": "4.3.5"
  },
  "workspaces": [
    "./packages/*",
    "./website",
    "./demo"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "turbo": {
    "baseBranch": "origin/master",
    "npmClient": "npm",
    "pipeline": {
      "compile": {
        "dependsOn": ["^compile"],
        "outputs": ["lib/**", "dist/*"]
      },
      "watch": {
        "dependsOn": ["^watch"],
        "outputs": ["lib/**", "dist/*"],
        "cache": false
      }
    }
  }
}
