{
  "name": "@pintora/standalone",
  "version": "0.0.0",
  "description": "A standalone version of pintora that has all the default diagrams",
  "keywords": [
    "pintora"
  ],
  "author": "hikerpig <hikerpigwinnie@gmail.com>",
  "homepage": "https://github.com/hikerpig/pintora#readme",
  "license": "MIT",
  "source": "src/index.ts",
  "module": "./lib/pintora-standalone.esm.js",
  "umd": "./lib/pintora-standalone.umd.js",
  "main": "./lib/pintora-standalone.umd.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "types": "types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hikerpig/pintora.git"
  },
  "scripts": {
    "compile": "microbundle --no-sourcemap --external none -f umd,esm",
    "watch": "microbundle --no-compress --no-sourcemap --external none -f umd,esm watch",
    "dev:umd": "microbundle --no-compress --external none --no-sourcemap -f umd",
    "gen-types": "tsc --decalration"
  },
  "bugs": {
    "url": "https://github.com/hikerpig/pintora/issues"
  },
  "dependencies": {
    "@pintora/core": "*",
    "@pintora/diagrams": "*",
    "@pintora/renderer": "*"
  },
  "devDependencies": {
    "@types/node": "^14.11.8",
    "microbundle": "^0.13.1",
    "typescript": "4.2.4"
  }
}

